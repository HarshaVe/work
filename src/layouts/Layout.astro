---
interface Props {
  title: string;
  showBackLink?: boolean;
}

const { title, showBackLink = true } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Harsha Vemulapalli</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class={currentPath === "/" ? "active" : ""}>Home</a>
        <a href="/about" class={currentPath.startsWith("/about") ? "active" : ""}>About</a>
        <a href="/portfolio" class={currentPath.startsWith("/portfolio") ? "active" : ""}>Portfolio</a>
        <a href="/resume" class={currentPath.startsWith("/resume") ? "active" : ""}>Resume</a>
        <a href="/contact" class={currentPath.startsWith("/contact") ? "active" : ""}>Contact</a>
      </nav>
    </header>
    
    <main>
      <slot />
    </main>

    {showBackLink && (
      <footer>
        <a href="/">‚Üê Home</a>
      </footer>
    )}
  </body>
</html>