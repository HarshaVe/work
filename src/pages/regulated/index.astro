---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPortfolio = await getCollection('portfolio');
const portfolioItems = allPortfolio
  .filter((item) => item.data.featured.regulated)
  .sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Regulated Industries">
  <h1>Regulated Industries</h1>
  <p>I design experiences where precision matters—in healthcare, finance, and safety-critical systems.</p>
  
  <h2>Selected Work</h2>
  <ul>
    {portfolioItems.map((item) => (
      <li>
        <a href={`/portfolio/${item.slug}`}>
          <strong>{item.data.title}</strong>
        </a> — {item.data.company}
        <p>{item.data.description}</p>
      </li>
    ))}
  </ul>
</Layout>