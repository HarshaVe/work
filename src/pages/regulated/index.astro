---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPortfolio = await getCollection('portfolio');
const portfolioItems = allPortfolio
  .filter((item) => item.data.featured.regulated)
  .sort((a, b) => a.data.order - b.data.order);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Regulated Industries' }
];

const actionLink = { label: 'View full resume →', href: '/resume' };
---

<Layout title="Regulated Industries" breadcrumbs={breadcrumbs} actionLink={actionLink}>
  <h1>Regulated Industries</h1>
  <p class="intro">I design experiences where precision matters—in healthcare, finance, and safety-critical systems.</p>
  
  <h2>Selected Work</h2>
  <ul>
    {portfolioItems.map((item) => (
      <li>
        <a href={`/portfolio/${item.slug}?via=regulated`} class="portfolio-title">{item.data.title}</a>
        <span class="portfolio-company"> — {item.data.company}</span>
        <p>{item.data.description}</p>
      </li>
    ))}
  </ul>
</Layout>