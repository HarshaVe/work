---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const portfolioEntries = await getCollection('portfolio');
const filteredEntries = portfolioEntries
  .filter(entry => entry.data.featured.ai)
  .sort((a, b) => a.data.order - b.data.order);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'AI & Emerging Tech' }
];

const actionLink = { label: '→ View full resume', href: '/resume' };
---

<Layout title="AI & Emerging Tech" breadcrumbs={breadcrumbs}>
  <h1>AI & Emerging Tech</h1>
  
  <p class="intro">AI isn't just a feature — it's a fundamental shift in how we design experiences. I've led teams applying machine learning to personalization, research automation, and intelligent discovery, always focused on outcomes over hype.</p>

  <div class="highlight-box">
    <h3>Key Outcomes</h3>
    <ul>
      <li><strong>Siemens:</strong> Designed AI-powered product discovery tool achieving 10% conversion lift and 15% engagement increase through intelligent personalization</li>
      <li><strong>Siemens:</strong> Built AI-powered research agent enabling teams to query validated insights, reducing time-to-insight by 20%</li>
      <li><strong>Bosch:</strong> Led design thinking for ML-driven infotainment, reducing driver distraction by 3 seconds per task and securing Ford partnership</li>
    </ul>
    <br />
    <a href="/resume">→ View full resume</a>
  </div>

  <h2>Related Work</h2>
  
  <ul class="portfolio-list">
    {filteredEntries.map((entry) => (
      <li class="portfolio-list-item">
        {entry.data.heroImage && (
          <a href={`/portfolio/${entry.slug}?via=ai`} class="portfolio-thumbnail">
            <img src={entry.data.heroImage} alt={entry.data.title} />
          </a>
        )}
        <div class="portfolio-list-content">
          <a href={`/portfolio/${entry.slug}?via=ai`} class="portfolio-title">{entry.data.title}</a>
          <span class="portfolio-company"> — {entry.data.company}</span>
          <p>{entry.data.description}</p>
        </div>
      </li>
    ))}
  </ul>
  
  <p><a href="/portfolio">→ View entire portfolio</a></p>
</Layout>
