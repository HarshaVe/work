---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPortfolio = await getCollection('portfolio');
const portfolioItems = allPortfolio
  .filter((item) => item.data.featured.ai)
  .sort((a, b) => a.data.order - b.data.order);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'AI & Emerging Tech' }
];

const actionLink = { label: 'view full resume', href: '/resume' };
---

<Layout title="AI & Emerging Tech" breadcrumbs={breadcrumbs} actionLink={actionLink}>
  <h1>AI & Emerging Technology</h1>
  <p class="intro">I'm building the future of UX research and design with AI—from persona agents to research automation.</p>
  
  <h2>Selected Work</h2>
  <ul>
    {portfolioItems.map((item) => (
      <li>
        <a href={`/portfolio/${item.slug}?via=ai`} class="portfolio-title">{item.data.title}</a>
        <span class="portfolio-company"> — {item.data.company}</span>
        <p>{item.data.description}</p>
      </li>
    ))}
  </ul>
</Layout>