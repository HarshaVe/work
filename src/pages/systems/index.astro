---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPortfolio = await getCollection('portfolio');
const portfolioItems = allPortfolio
  .filter((item) => item.data.featured.systems)
  .sort((a, b) => a.data.order - b.data.order);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Design Systems' }
];

const actionLink = { label: 'view full resume', href: '/resume' };
---

<Layout title="Design Systems" breadcrumbs={breadcrumbs} actionLink={actionLink}>
  <h1>Design Systems & Platform</h1>
  <p class="intro">I build design infrastructure that scales—systems, governance, and the teams that make them work.</p>
  
  <h2>Selected Work</h2>
  <ul>
    {portfolioItems.map((item) => (
      <li>
        <a href={`/portfolio/${item.slug}?via=systems`} class="portfolio-title">{item.data.title}</a>
        <span class="portfolio-company"> — {item.data.company}</span>
        <p>{item.data.description}</p>
      </li>
    ))}
  </ul>
</Layout>