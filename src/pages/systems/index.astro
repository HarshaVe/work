---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPortfolio = await getCollection('portfolio');
const portfolioItems = allPortfolio
  .filter((item) => item.data.featured.systems)
  .sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Design Systems">
  <h1>Design Systems & Platform</h1>
  <p>I build design infrastructure that scales—systems, governance, and the teams that make them work.</p>
  
  <h2>Selected Work</h2>
  <ul>
    {portfolioItems.map((item) => (
      <li>
        <strong>{item.data.title}</strong> — {item.data.company}
        <p>{item.data.description}</p>
      </li>
    ))}
  </ul>
</Layout>